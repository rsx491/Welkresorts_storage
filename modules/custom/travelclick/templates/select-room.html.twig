<head>
   <title>Welk Resorts Booking - Select Room</title>
   <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport"/>
    <link rel="stylesheet" href="{{ theme_path }}/dest/css/lib/bootstrap.min.css" />
    <link rel="stylesheet" href="{{ theme_path }}/dest/css/lib/owl.carousel.min.css">
    <link rel="stylesheet" href="{{ theme_path }}/dest/css/lib/owl.theme.default.min.css">
    <link rel="stylesheet" href="{{ theme_path }}/dest/css/lib/jquery.datepick.css">
    <link rel="stylesheet" href="{{ theme_path }}/dest/css/main.css" />
</head>

<body>
   <div class="main-wrapper">
      <header>
         <div class="container p-0">
            <div class="row booking-header align-items-center">
               <div
                  class="order-xl-1 order-lg-1 order-md-1 order-sm-1 order-1 col-xl-6 col-lg-5 col-md-6 col-sm-6 col-5">
                  <div class="row align-items-center">
                     <div class="col-lg-4 col-xl-3 col-12 nopadding">
                        <img src="{{file_url(_context[""]["#items"]['header_block_val']['bookingLogo'] )}}" alt="Welk Logo" class="img-fluid">
                     </div>
					 
                     <div class="col-lg-8 col-xl-9 col-12">
                        <h6 class="header-location p-0 m-0">{{ _context[""]["#items"]['header_query_val']['h1_resortname'] | raw }}</h6>
                        <p class="p-0 m-0 d-none d-lg-block d-xl-block header-info ">{{ _context[""]["#items"]['header_query_val']['h1_address'] | raw }}</p>
                     </div>
					 
                  </div>
               </div>
               <div
                  class="order-xl-2 order-lg-2 order-md-3 order-sm-3 order-3 col-xl-3 col-lg-4 col-md-12 col-sm-12 col-12 ta-rating">
                  <div class="row">
                     <div class="col-lg-12 col-xl-12 col-6">
                        <p class="p-0 m-0 header-info ">TripAdvisor Ratings</p>
                     </div>
                    <div class="col-lg-12 col-xl-12 col-6">
                        <img src="{{ file_url(_context[""]["#items"]['header_block_val']['tripadvisorLogo']) }}" alt="ta-logo">
					   
					     <!-- Commented as Tripadvisor is not implemented and keeping an Image here-->
					   
                        <!-- <ul class="list-inline clearfix "> -->
                           <!-- <li class="list-inline-item mr-0"><img src="dest/images/ta-logo.png" alt="ta-logo"></li> -->
                           <!-- <li class="list-inline-item mr-0"><img src="dest/images/ta-rating-bubble-full.svg" -->
                                 <!-- alt="ta-logo"></li> -->
                           <!-- <li class="list-inline-item mr-0"><img src="dest/images/ta-rating-bubble-full.svg" -->
                                 <!-- alt="ta-logo"></li> -->
                           <!-- <li class="list-inline-item mr-0"><img src="dest/images/ta-rating-bubble-full.svg" -->
                                 <!-- alt="ta-logo"></li> -->
                           <!-- <li class="list-inline-item mr-0"><img src="dest/images/ta-rating-bubble-half.svg" -->
                                 <!-- alt="ta-logo"></li> -->
                           <!-- <li class="list-inline-item mr-0"><img src="dest/images/ta-rating-bubble-empty.svg" -->
                                 <!-- alt="ta-logo"></li> -->
                           <!-- <li class="list-inline-item"><a href="#" class="p-0 m-0"><u>273 Reviews</u></a></li> -->
                        <!-- </ul> -->
                     </div>
                  </div>
               </div>
               <div
                  class="nopadding order-xl-3 order-lg-3 order-md-2 order-sm-2 order-2 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-7">
                  <ul class="list-inline clearfix header-contact">
                     <li class="list-inline-item">
                        <a href="#" class="d-none d-sm-block d-md-block d-lg-block d-xl-block">{{ _context[""]["#items"]['header_query_val']['h1_contact'] }}</a>
                        <a href="#" class="d-block d-sm-none callIn">CALL</a>
                     </li>
					 
                            
                     <li class="list-inline-item float-right signIn"><a href="{{ _context[""]["#items"]['header_block_val']['headerLink'] }}" title="{{ _context[""]["#items"]['header_title'] }}">{{ _context[""]["#items"]['header_block_val']['headerTitle'] }}</a></li>
					 
                  </ul>
                  <div class="best-rates-header align-items-center" data-target="#bestRatesModal"
                            data-toggle="modal">Best Rate Guaranteed
                     <span class="info-icon"></span>
                  </div>
				  <div class="modal" id="bestRatesModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <!-- Modal Header -->
                            <div class="modal-header">
                                <h4 class="modal-title">Best Rates</h4>
                                <button class="close" data-dismiss="modal" type="button"></button>
                            </div>

                            <!-- Modal body -->
                            <div class="modal-body">
                                {{ drupal_region('best_rates_guaranteed') }}
                            </div>

                            <!-- Modal footer -->
                            <div class="modal-footer">
                                <button class="btn btn-danger" data-dismiss="modal" type="button">
                                    Close
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
               </div>
            </div>
         </div>
      </header>
      <div class="content-wrapper">
         <!--booking dates-->
         <div class="booking-div">
            <div class="container">
               <div class="row align-items-center">
                  <div class="col-6 col-lg-4 col-xl-4">
                     <p class="text-uppercase d-none d-lg-block">Check In - Check out</p>
                     <p class="text-uppercase d-block d-lg-none">Stay Dates</p>
					
                     <p class="date">{{ _context[""]["#items"]['session_details'].get('booking_dates')  }}</p>
                  </div>
                  <div class="col-lg-4 col-xl-4 d-lg-none d-xl-block d-md-none d-lg-block d-sm-none d-none ">
                     <p class="text-uppercase">Room & Guests</p>
                     <p class="guests">{{ _context[""]["#items"]['session_details'].get('booking_rooms_guests')}}</p>
                  </div>
                  <div class=" col-6 col-lg-4 col-xl-4">
                     <a title="Update Search" class="btn btn-primary small" href="#" data-target="#bookingSlots" data-toggle="modal">Update&nbsp;<em
                           class="d-lg-none d-xl-block d-md-none d-lg-block d-sm-none d-none">Search</em> </a>
                  </div>
               </div>
            </div>
         </div>
		 <!-- Modal Window for Book your stay -->
        <div class="modal" id="bookingSlots">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button class="close" data-dismiss="modal" type="button"></button>
                    </div>
                    <div class="modal-body">
                        <div class="booking-slots header">
                            <div class="container">
                               {{ drupal_region('book_your_stay') }}
                            </div>
                            <div class="modal" id="bestRatesModal">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <!-- Modal Header -->
                                        <div class="modal-header">
                                            <button class="close" data-dismiss="modal" type="button"></button>
                                        </div>

                                        <!-- Modal body -->
                                        <div class="modal-body">
                                           {{ drupal_region('best_rates_guaranteed') }} 
                                        </div>

                                        <!-- Modal footer -->
                                        <div class="modal-footer">
                                            <button class="btn btn-danger" data-dismiss="modal" type="button">
                                                Close
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
         <!--/booking dates-->
         <!-- page-header -->
         <div class="booking-page-header">
            <div class="container">
               <div class="row pl-0">
                  <span class="get-away-text">Select a Room</span>
               </div>
            </div>
         </div>
         <!--/page-header -->
         <!-- page-sub-header -->
         {{ drupal_region('Room_offer') }}
         <!-- page-sub-header -->
         <!--hotel listing-->
         <div class="container">
		      
            <ul>
			{% for b in _context[""]["#items"]["booking"].roomStays[0].roomTypes %}
               {{ drupal_view('select_room_view', 'block_1',_context[""]["#items"]['session_details'].get('tid_val'),b.roomTypeCode) }}
			{% endfor %}
            </ul>
		
         </div>
         <!--/hotel listing-->
      </div>
      <!-- Modal -->
      
      <!-- Modal -->
      <footer class="footer-wrapper booking-flow-footer">
         <div class="container">
            <div class="row align-items-center">
               <div class="col-12 footer-logo col-lg-6 pl-0">
                  {{ drupal_region('Welk_logo_footer') }}
               </div>
               <div class="col-12 col-lg-6 top-footer-list">
                  <ul class="list-inline float-right">
                     <li class="list-inline-item"><a href="{{ _context[""]["#items"]['header_block_val']['footerLink']}}" title="Explore Resorts">{{ _context[""]["#items"]['header_block_val']['footerTitle']}}</a></li>
                     <li class="list-inline-item"><a href="tel:{{ _context[""]["#items"]['central_number']}}">{{ _context[""]["#items"]['header_block_val'] ['cNumber']}}</a></li>
                  </ul>
               </div>
            </div>
         </div>
         <div class="divider"></div>
         <div class="copy-rights">
            <div class="container">
               <div class="row">
                  <div class="col-12 col xl-3 col-lg-3 col-md-3 col-sm-3 pl-0">
                     {{ drupal_region('Footer_copyright') }}
                  </div>
                  <div class="col-12 col xl-9 col-lg-9 col-md-9 col-sm-9">
                     {{ drupal_region('footer') }}
                     <div class="back-top">Back to Top</div>
                  </div>
               </div>
            </div>
         </div>
      </footer>
   </div>
        <script src="{{ theme_path }}/dest/js/lib/jquery-3.4.1.js"></script>
         <script src="{{ theme_path }}/dest/js/lib/popper.min.js"></script>
         <script src="{{ theme_path }}/dest/js/lib/bootstrap.min.js"></script>
         <script src="{{ theme_path }}/dest/js/lib/owl.carousel.min.js"></script>
         <script src="{{ theme_path }}/dest/js/lib/jquery.plugin.min.js"></script>
         <script src="{{ theme_path }}/dest/js/lib/jquery.datepick.js"></script>
         <script src="{{ theme_path }}/dest/js/custom.js"></script>
	{{ attach_library('travelclick/travelclick.assests_footer') }}
</body>

</html>