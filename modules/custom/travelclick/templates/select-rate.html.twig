<head>
   <title>Welk Resorts Booking - Select Rate</title>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="{{ theme_path }}/dest/css/lib/bootstrap.min.css" />
    <link rel="stylesheet" href="{{ theme_path }}/dest/css/lib/owl.carousel.min.css">
    <link rel="stylesheet" href="{{ theme_path }}/dest/css/lib/owl.theme.default.min.css">
    <link rel="stylesheet" href="{{ theme_path }}/dest/css/lib/jquery.datepick.css">
    <link rel="stylesheet" href="{{ theme_path }}/dest/css/main.css" />
</head>
<body>
   <div class="main-wrapper">
   {# {{ kint(_context[""]['#items']["sessionDetails"]) }} #}
      <header>
         <div class="container p-0">
            <div class="row booking-header align-items-center">
               <div
                  class="order-xl-1 order-lg-1 order-md-1 order-sm-1 order-1 col-xl-6 col-lg-5 col-md-6 col-sm-6 col-5">
                  <div class="row align-items-center">
                     <div class="col-lg-4 col-xl-3 col-12 nopadding">
                        <img src="{{ file_url(_context[""]["#items"]["header2"].bookingLogo) }}" alt="Welk Logo" class="img-fluid">
                     </div>
                     <div class="col-lg-8 col-xl-9 col-12">
                        <h6 class="header-location p-0 m-0">{{ _context[""]["#items"]["header1"].h1_resortname }}</h6>
                        <p class="p-0 m-0 d-none d-lg-block d-xl-block header-info">{{ _context[""]["#items"]["header1"].h1_address | raw }}</p>
                     </div>
                  </div>
               </div>
               <div
                  class="order-xl-2 order-lg-2 order-md-3 order-sm-3 order-3 col-xl-3 col-lg-4 col-md-12 col-sm-12 col-12 ta-rating">
                  <div class="row">
                     <div class="col-lg-12 col-xl-12 col-6">
                        <p class="p-0 m-0 header-info ">TripAdvisor Ratings</p>
                     </div>
                     <div class="col-lg-12 col-xl-12 col-6">
                        <img src="{{ file_url(_context[""]["#items"]["header2"].tripadvisorLogo) }}" alt="ta-logo">
                     </div>
                  </div>
               </div>
               <div class="nopadding order-xl-3 order-lg-3 order-md-2 order-sm-2 order-2 col-xl-3 col-lg-3 col-md-6 col-sm-6 col-7">
                  <ul class="list-inline clearfix header-contact">
                     <li class="list-inline-item">
                        <a href="#" class="d-none d-lg-block d-xl-block">{{ _context[""]["#items"]["header1"].h1_contact }}</a>
                        <a href="#" class="d-block d-sm-none callIn">CALL</a>
                     </li>
                     <li class="list-inline-item float-right signIn"><a href="{{ _context[""]["#items"]["header2"].headerLink }}">{{ _context[""]["#items"]["header2"].headerTitle }}</a></li>
                  </ul>
                     <div class="best-rates best-rates-header align-items-center" data-toggle="tooltip" data-placement="bottom">
                        Best Rate Guaranteed         
                        <span class="info-icon"></span>  
                  </div>			  
                   <div id="bestRateGuaranted"> {{ drupal_region('best_rates_guaranteed') }}</div>  				
               </div>
               </div>
            </div>
         </div>
      </header>
      <!--/ header end -->
      <div class="content-wrapper">
         <!--booking dates-->
         <div class="booking-div">
            <div class="container">
               <div class="row align-items-center">
                  <div class="col-6 col-lg-4 col-xl-4">
                     <p class="text-uppercase d-none d-lg-block">Check In - Check out</p>
                     <p class="text-uppercase d-block d-lg-none">Stay Dates</p>
                     {% set bookingdates = _context[""]["#items"]["sessionDetails"].get('booking_dates') %}
                     <p class="date">{{ bookingdates }}</p>
                  </div>
                  <div class="col-lg-4 col-xl-4 d-lg-none d-xl-block d-md-none d-lg-block d-sm-none d-none ">
                     <p class="text-uppercase">Room & Guests</p>
                     {% set roomguests = _context[""]["#items"]["sessionDetails"].get('booking_rooms_guests') %}
                     <p>{{ roomguests }}</p>
                  </div>
                  <div class=" col-6 col-lg-4 col-xl-4">
                     <a title="Update Search" class="btn btn-primary small" href="#" data-target="#bookingSlots" data-toggle="modal">Update&nbsp;<em
                           class="d-lg-none d-xl-block d-md-none d-lg-block d-sm-none d-none">Search</em> </a>
                  </div>
               </div>
            </div>
         </div>
         <!-- Modal Window for Book your stay -->
        <div class="modal" id="bookingSlots">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button class="close" data-dismiss="modal" type="button"></button>
                    </div>
                    <div class="modal-body">
                        <div class="booking-slots header">
                            <div class="container">
                               {{ drupal_region('book_your_stay') }}
                            </div>
                            <div class="modal" id="bestRatesModal">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <!-- Modal Header -->
                                        <div class="modal-header">
                                            <button class="close" data-dismiss="modal" type="button"></button>
                                        </div>

                                        <!-- Modal body -->
                                        <div class="modal-body">
                                           {{ drupal_region('best_rates_guaranteed') }} 
                                        </div>

                                        <!-- Modal footer -->
                                        <div class="modal-footer">
                                            <button class="btn btn-danger" data-dismiss="modal" type="button">
                                                Close
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
         <!--/booking dates-->
         <!-- page-header -->
         <div class="booking-page-header">
            <div class="container">
               <div class="row pl-0">
                  <span class="get-away-text">{{ _context[""]["#items"]["header2"].ratePageTitle }}</span>
               </div>
            </div>
         </div>
         <!--/page-header -->
         <!--change room & promo code-->
         <div class="container change-room">
            <div class="row">
               <div class="col-lg-8 col-xl-8 pl-xl-0 pl-lg-0">
               {% set no_of_rooms = _context[""]['#items']["sessionDetails"].get('no_of_roomcount') %}
               {% set no_of_rooms = no_of_rooms + 1 %}
                  <span class="d-block">Room {{ no_of_rooms }} of {{ _context[""]["#items"]["roomCount"] }}</span>
                  <div class="row">
                     <div class="col-6 col-lg-3 col-xl-3">
                        {% set roomimage_url = file_url(_context[""]["#items"]['room_image_target_path']) %}
                        <img class="img-fluid d-block" src="{{ roomimage_url }}" alt="Room">
                     </div>
                     <div class="col-6 col-lg-9 col-xl-9 list-view-block pl-xl-1 pl-lg-1">
                        <div class="title">{{ _context[""]["#items"]["roomName"] }}</div>
                           <div class="rooms capacity">{{ _context[""]["#items"]["number_of_guest"] }}</div>
                     </div>
                  </div>
                  <a title="Change Room" class="change-room-link" href="{{ _context[""]["#items"]["path"] }}reservation/booking">Change Room</a>
               </div>
            </div>
         </div>
         <!--change room & promo code-->
         <!-- tabs -->
         <div class="container room-rates-deals">
            <div class="row d-block">
               <div>
                  <ul class="nav nav-pills justify-content-center">
                     <li class="nav-item col-lg-6 col-xl-6 col-6 pl-xl-0 pl-lg-0">
                        <a class="nav-link active text-center d-block arrow_box" data-toggle="pill"
                           href="#standardRates">
                           STANDARD RATES
                           <span class="d-block">From ${{ _context[""]["#items"]["standardMinRate"] | raw }} USD/Night</span>
                        </a>
                     </li>
                     <li class="nav-item col-lg-6 col-xl-6 col-6 pr-xl-0 pr-lg-0">
                        <a class="nav-link text-center d-block" data-toggle="pill" href="#dealsPackages">DEALS &
                           PACKAGES
                           <span class="d-block">From ${{ _context[""]["#items"]["dealMinRate"] | raw }} USD/Night</span>
                        </a>
                     </li>
                  </ul>
                  <!-- Tab panes -->
                  <div class="tab-content">
                     <div class="tab-pane container active" id="standardRates">
                        <p class="text-center tab-headline">Our Most Popular Rate</p>
                        <!--listing-->
                        <div class="row flex-wrap">
                        {% set planIteration = 1 %}
                        {% for rateplan in _context[""]["#items"]["booking"].roomStays[0].ratePlans %}
                           {% set plandesc =  rateplan.ratePlanDescription|raw %}
                           <div class="col-lg-4 col-xl-4 standardRates-listing stnplans">
                              <h4>{{ rateplan.ratePlanName }}</h4>
                              <p>{{ plandesc|length > 200 ? plandesc|slice(0, 200)|raw ~ '...' : plandesc|raw }}</p>
                              {% set plancode = rateplan.ratePlanCode %}
                              {% for key, awardrate in _context[""]["#items"]["awardRates"] %}
                                 {% if key == plancode %}
                                    <div class="cash-reward"> + Earn ${{ awardrate }} Cash Rewards <img
                                          src="{{ theme_path }}/dest/images/info-icon-grey.svg" /></div>
                                 {% endif %}
                              {% endfor %}
                              <a href="javascript:void(0)" class="rate-details" data-toggle="modal" data-target="#changeRoom" id="rateDetails" rateplancode="{{ rateplan.ratePlanCode}}">Rate Details</a>
                              <!-- Image loader -->
                              <div id="planloader" style="display: none;">
                                 <img src="{{ theme_path }}/dest/images/ajax-loader.gif">
                              </div>
                              <!-- Image loader -->
                              <hr />
                              <div class="d-flex justify-content-between align-items-center">
                                 <div class="">
                                    <span class="listing-price d-block"> &#36;{{ rateplan.leadRate|round(2, 'floor') }}</span>
                                    <span class="d-block listing-currency">USD per night</span>
                                 </div>
                                 {%
                                    set ratePlan_code, ratePlan_type, ratePlan_name = rateplan.ratePlanCode, rateplan.ratePlanType, rateplan.ratePlanName
                                 %}
                                 <div class=""><a title="Select Room" class="btn btn-primary small rate-redirect" href="javascript:void(0)" id='rate' rateplancode = "{{ ratePlan_code }}" rateplantype = "{{ ratePlan_type }}" rateplanname = "{{ ratePlan_name }}" totalRoomCount="{{ _context[""]["#items"]["roomCount"] }}" roomCounter="{{ _context[""]['#items']["sessionDetails"].get('no_of_roomcount') }}" flag="{{ _context[""]["#items"]["flag"] }}">Select
                                       Rate</a></div>
                              </div>
                           </div> 
                           {% set planIteration = planIteration+1 %}
                           {% endfor %}               
                        </div>
                        <!--listing-->
                     </div>
                     <div class="tab-pane container fade" id="dealsPackages">
                        <p class="text-center tab-headline">DEALS & PACKAGES</p>
                        <!--listing-->
                        <div class="row flex-wrap">
                        {% for packageType in _context[""]["#items"]["booking"].roomStays[0].packageTypes %}
                           {% set dealdesc =  packageType.description|raw %}
                           <div class="col-lg-4 col-xl-4 standardRates-listing dealpackages">
                             <div class="img-wrapper">
                               <img src="https://reservations.travelclick.com/{{ packageType.mainImage.source }}" width="50" height="50"/>
                             </div>
                              <div class="content-wrapper">                             
                              <h4>{{ packageType.packageName }}</h4>
                              <p>{{ dealdesc|length > 200 ? dealdesc|slice(0, 200)|raw ~ '...' : dealdesc|raw }}</p>
                              <a href="javascript:void(0)" class="deal-details" data-toggle="modal" data-target="#changeRoom1" id="dealDetails" dealcode="{{ packageType.packageCode }}">Show More</a>
                              <!-- Image loader -->
                              <div id="dealloader" style="display: none;">
                                 <img src="{{ theme_path }}/dest/images/ajax-loader.gif">
                              </div>
                              <!-- Image loader -->
                              <hr />
                              <div class="d-flex justify-content-between align-items-center">
                                 <div class="">
                                    <span class="listing-price d-block"> &#36;{{ packageType.leadRate|round(2, 'floor') }}</span>
                                    <span class="d-block listing-currency">USD per night</span>
                                 </div>
                                 {%
                                    set package_code, package_type, package_name = packageType.packageCode, 'Package', packageType.packageName
                                 %}
                                 <div class=""><a title="Select Room" class="btn btn-primary small package-redirect" href="javascript:void(0)" id="package" rateplancode = "{{ package_code }}" rateplantype = "{{ package_type }}" rateplanname = "{{ package_name }}" totalRoomCount="{{ _context[""]["#items"]["roomCount"] }}" roomCounter="{{ _context[""]['#items']["sessionDetails"].get('no_of_roomcount') }}">Select
                                       Rate</a></div>
                              </div>
                              </div>
                           </div> 
                           {% endfor %}               
                        </div>
                        <!--listing-->
                     </div>
                  </div>
               </div>
            </div>
         </div>
         <!--  -->
      </div>
      <!-- Start Standard Plan Modal POP Up -->
      <div id="plans"></div>
      <!-- End Standard Plan Modal POPUP -->
      <!-- Start Deal & Packages Modal POP Up -->
      <div id="deal"></div>
      <!-- End Deal & Packages Modal POPUP -->
      <footer class="footer-wrapper booking-flow-footer">
         <div class="container">
            <div class="row align-items-center">
               <div class="col-12 footer-logo col-lg-6 pl-0">
                  {{ drupal_region('Welk_logo_footer') }}
               </div>
               <div class="col-12 col-lg-6 top-footer-list">
                  <ul class="list-inline float-right">
                     <li class="list-inline-item"><a href="{{ _context[""]["#items"]["header2"].headerLink }}" title="Explore Resorts">{{ _context[""]["#items"]["header2"].footerTitle }}</a></li>
                     <li class="list-inline-item"><a href="tel:{{ _context[""]["#items"]["header2"].cNumber }}">{{ _context[""]["#items"]["header2"].cNumber }}</a></li>
                  </ul>
               </div>
            </div>
         </div>
         <div class="divider"></div>
         <div class="copy-rights">
            <div class="container">
               <div class="row">
                  <div class="col-12 col xl-3 col-lg-3 col-md-3 col-sm-3 pl-0">
                     {{ drupal_region('Footer_copyright') }}
                  </div>
                  <div class="col-12 col xl-9 col-lg-9 col-md-9 col-sm-9">
                     {{ drupal_region('footer') }}
                     <div class="back-top">Back to Top</div>
                  </div>
               </div>
            </div>
         </div>
      </footer>
      
   </div>
         <script src="{{ theme_path }}/dest/js/lib/jquery-3.4.1.js"></script>
         <script src="{{ theme_path }}/dest/js/lib/popper.min.js"></script>
         <script src="{{ theme_path }}/dest/js/lib/bootstrap.min.js"></script>
         <script src="{{ theme_path }}/dest/js/lib/owl.carousel.min.js"></script>
         <script src="{{ theme_path }}/dest/js/lib/jquery.plugin.min.js"></script>
         <script src="{{ theme_path }}/dest/js/lib/jquery.datepick.js"></script>
         <script src="{{ theme_path }}/dest/js/custom.js"></script>
   <script>
      $(document).ready(function () {
         $('.nav-pills li a').click(function () {
            $('.nav-pills li a.active').removeClass('arrow_box');
            $(this).addClass('arrow_box');
         });
      });
   </script>
    {{ attach_library('travelclick/travelclick.assests_footer') }}
</body>